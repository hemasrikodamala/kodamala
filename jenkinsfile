    agent any

    stages {
        stage('validate') {
            steps {
                echo 'validating the code'
                }
                }              
                stage('compile'){
                steps
                {
                echo 'compiling the code'
                }
                }                           
                stage('installation'){
                steps
                echo 'install the code'
                }
                }
                               stage('deploy'){
                steps
                {
                echo 'deploy the code'
               } 
            }
        }
    }

